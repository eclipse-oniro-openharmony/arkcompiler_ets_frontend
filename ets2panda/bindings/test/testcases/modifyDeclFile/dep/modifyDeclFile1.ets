interface Employee {
  name: string;
  salary: number;
  hasBonus: boolean;
}

function calculateTotalSalary(employees: Employee[]): number {
  const bonusAmount = 500;

  let totalSalary = 0;
	EtsStepArkTest();

  for (const employee of employees) {
    let adjustedSalary = employee.salary;
    if (employee.hasBonus) {
      adjustedSalary += bonusAmount;
    }
    totalSalary += adjustedSalary;
  }
  return totalSalary;
}

